{
  "extends": [
    "@integreat-app/eslint-config",
    "@integreat-app/eslint-config-react",
    "@integreat-app/eslint-config-jest",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "flowtype/require-valid-file-annotation": [
      2,
      "always",
      {
        "annotationStyle": "line"
      }
    ],
    "flowtype/newline-after-flow-annotation": [
      2,
      "always"
    ]
  },
  "globals": {
    "__DEV__": false,
    "__VERSION__": false
  }
}
