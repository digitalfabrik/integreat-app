{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "ES5", "ES6"],
    "module": "ES2020",
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "normalize-strings": ["../shared/@types/normalize-strings"]
    },
    "skipLibCheck": true,
    "target": "ES2019",
    "types": ["jest", "node", "react"]
  },
  "include": [
    "src/**/*",
    "tools/*",
    "src/assets/licenses.json",
    "jest.setup.ts",
    "jest.config.ts",
    "stylelint.config.js"
  ],
  "references": [
    {
      "path": "../translations"
    },
    {
      "path": "../build-configs"
    },
    {
      "path": "../shared"
    }
  ]
}
