{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "ES5", "ES6"],
    "module": "ES2020",
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "api-client": [
        "../api-client"
      ],
      "build-configs": [
        "../build-configs"
      ],
      "translations": [
        "../translations"
      ],
      "normalize-strings": [
        "src/@types/normalize-strings"
      ]
    },
    "skipLibCheck": true,
    "target": "ES2019",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["jest", "node", "react"]
  },
  "include": ["src/**/*", "tools/*", "./jest.setup.ts"],
  "references": [
    {
      "path": "../translations"
    },
    {
      "path": "../build-configs"
    },
    {
      "path": "../api-client"
    }
  ]
}
