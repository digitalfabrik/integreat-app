{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "ES5", "ES6"],
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "ES2019",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["jest", "node", "react"]
  },
  "include": ["src/**/*", "tools/*", "./jest.setup.ts"],
  "references": [
    {
      "path": "../translations"
    },
    {
      "path": "../build-configs"
    },
    {
      "path": "../api-client"
    }
  ]
}
