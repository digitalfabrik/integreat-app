{
  "name": "integreat-app",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "native",
      "web",
      "e2e-tests",
      "api-client",
      "translations",
      "build-configs"
    ],
    "nohoist": [
      "native/**",
      "web/**",
      "api-client/**",
      "translations/**",
      "build-configs/**"
    ]
  },
  "scripts": {
    "lint": "yarn run eslint",
    "lint:changed": "eslint . -c .eslintrc_changed.js",
    "eslint": "eslint .",
    "test": "yarn workspace native test && yarn workspace web test && yarn workspace api-client test && yarn workspace translations test",
    "test:changed": "yarn workspace native test -o && yarn workspace web test -o && yarn workspace api-client test -o && yarn workspace translations test -o",
    "circleci:update-config": "{ cat .circleci/autogenerated_header.yml; circleci config pack .circleci/src; } > .circleci/config.yml && circleci config validate",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "resolutions": {
    "moment": "2.29.1",
    "react": "17.0.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/eslint": "^8.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^15.14.9",
    "@types/prettier": "^2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-diff": "^1.0.12",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-styled-components-a11y": "^0.0.34",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "4.4.4"
  }
}
