{
  "name": "integreat-app",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "native",
      "web",
      "e2e-tests",
      "api-client",
      "translations",
      "build-configs"
    ],
    "nohoist": [
      "native/**",
      "web/**",
      "e2e-tests/**",
      "api-client/**",
      "translations/**",
      "build-configs/**"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --cache --cache-location .eslintcache .",
    "lint:ci": "eslint --quiet --format junit -o reports/lint/junit-lint.xml .",
    "test": "yarn workspace native test && yarn workspace web test && yarn workspace api-client test && yarn workspace translations test",
    "test:changed": "yarn workspace native test -o && yarn workspace web test -o && yarn workspace api-client test -o && yarn workspace translations test -o",
    "circleci:update-config": "{ cat .circleci/autogenerated_header.yml; circleci config pack .circleci/src; } > .circleci/config.yml && circleci config validate",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "resolutions": {
    "luxon": "^3.4.2",
    "react": "18.2.0",
    "@types/react": "^18.0.26",
    "@types/react-native": "^0.71.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/eslint": "^8.44.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-jsx-expressions": "^1.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-styled-components-a11y": "^2.1.31",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  }
}
