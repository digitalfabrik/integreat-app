{
  "name": "integreat-app",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "native",
      "web",
      "e2e-tests",
      "shared",
      "translations",
      "build-configs"
    ],
    "nohoist": [
      "native/**",
      "web/**",
      "e2e-tests/**",
      "shared/**",
      "translations/**",
      "build-configs/**"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint --cache --cache-location .eslintcache . && yarn workspace web stylelint && yarn workspace native stylelint",
    "lint:ci": "yarn node --max-old-space-size=1728 $(yarn bin eslint) --format junit -o reports/lint/junit-lint.xml .",
    "test": "jest",
    "test:changed": "jest -o",
    "test:ci": "jest --coverage --ci",
    "circleci:update-config": "{ cat .circleci/autogenerated_header.yml; circleci config pack .circleci/src; } > .circleci/config.yml && circleci config validate",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "ts:check": "tsc --build",
    "ts:check:ci": "yarn node --max-old-space-size=1536 $(yarn bin tsc) --build",
    "postinstall": "patch-package"
  },
  "resolutions": {
    "luxon": "3.7.2",
    "react": "19.0.0",
    "webpack-dev-middleware": "7.2.1",
    "webpack-dev-server": "5.0.4"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^8.56.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.3",
    "@types/react": "19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "app-toolbelt": "github:digitalfabrik/app-toolbelt#semver:0.6.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-jsx-expressions": "^1.3.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-styled-components-a11y": "^2.1.32",
    "eslint-plugin-unicorn": "^52.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.38",
    "postcss-styled-syntax": "^0.6.4",
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-config-react-native-styled-components": "^0.7.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-react-native": "^2.7.0",
    "stylelint-use-logical": "^2.1.2",
    "ts-jest": "^29.1.2",
    "tsx": "^4.8.2",
    "typescript": "^5.7.3"
  }
}
