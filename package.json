{
  "name": "integreat-app",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "native",
      "web",
      "e2e-tests",
      "api-client",
      "translations",
      "build-configs"
    ],
    "nohoist": [
      "native/**",
      "web/**",
      "e2e-tests/**",
      "api-client/**",
      "translations/**",
      "build-configs/**"
    ]
  },
  "scripts": {
    "lint": "yarn run eslint",
    "lint:changed": "eslint . -c .eslintrc_changed.js",
    "eslint": "eslint .",
    "test": "yarn workspace native test && yarn workspace web test && yarn workspace api-client test && yarn workspace translations test",
    "test:changed": "yarn workspace native test -o && yarn workspace web test -o && yarn workspace api-client test -o && yarn workspace translations test -o",
    "circleci:update-config": "{ cat .circleci/autogenerated_header.yml; circleci config pack .circleci/src; } > .circleci/config.yml && circleci config validate",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "resolutions": {
    "moment": "2.29.4",
    "react": "18.2.0",
    "@types/react": "^18.0.26"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/eslint": "^8.4.5",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-diff": "^1.0.15",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-jsx-expressions": "^1.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-styled-components-a11y": "^0.0.40",
    "jest": "^29.4.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.8.2",
    "typescript": "4.7.4"
  }
}
