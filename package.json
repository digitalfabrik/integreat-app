{
  "name": "integreat-app",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "native",
      "native-2",
      "web",
      "web-ts",
      "e2e-tests",
      "api-client",
      "translations",
      "build-configs"
    ],
    "nohoist": [
      "native/**",
      "web/**",
      "web-ts/**",
      "api-client/**",
      "translations/**",
      "build-configs/**"
    ]
  },
  "scripts": {
    "lint": "yarn run eslint",
    "eslint": "eslint .",
    "test": "yarn workspace native test && yarn workspace web test && yarn workspace api-client test",
    "flow": "yarn workspace native flow && yarn workspace web flow",
    "circleci:update-config": "{ cat .circleci/autogenerated_header.yml; circleci config pack .circleci/src; } > .circleci/config.yml && circleci config validate",
    "test-ts": "tsc -p tsconfig.json"
  },
  "resolutions": {
    "moment": "2.29.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.10",
    "@types/prettier": "^2.2.3",
    "@typescript-eslint/parser": "^4.22.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.0.5",
    "typescript": "^4.2.4"
  }
