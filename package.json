{
  "name": "integreat-app",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "web",
      "api-client",
      "translations",
      "tools",
      "util",
      "build-configs"
    ]
  },
  "scripts": {
    ":lint": "cd $INIT_CWD && eslint --cache --cache-location $PROJECT_CWD/.eslintcache .",
    ":lint:ci": "yarn node --max-old-space-size=1535 $(yarn bin eslint) .",
    ":test": "cd $INIT_CWD && yarn run -T jest",
    ":test:changed": "cd $INIT_CWD && yarn run -T jest -o",
    ":test:ci": "cd $PROJECT_CWD && yarn jest --coverage --ci --config jest.config.ts",
    "circleci:update-config": "cd $PROJECT_CWD && { cat .circleci/autogenerated_header.yml; circleci config pack .circleci/src; } > .circleci/config.yml && circleci config validate",
    "prettier:check": "cd $PROJECT_CWD && prettier --ignore-path .prettierignore --check $PWD",
    "prettier:write": "cd $PROJECT_CWD && prettier --ignore-path .prettierignore --write $PWD",
    "ts:check": "tsc --build",
    ":native": "cd $PROJECT_CWD/native && yarn",
    "postinstall": "husky install"
  },
  "resolutions": {
    "react-native-highlight-words@^1.0.1": "patch:react-native-highlight-words@npm%3A1.0.1#./.yarn/patches/react-native-highlight-words-npm-1.0.1-0dfab0c882.patch"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@swc/core": "^1.3.85",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/eslint": "^8.44.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-jsx-expressions": "^1.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-styled-components-a11y": "^2.1.31",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-junit": "^16.0.0",
    "jest_workaround": "^0.79.19",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@3.6.3"
}
